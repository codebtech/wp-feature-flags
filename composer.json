{
    "name": "mr/feature-flags",
    "description": "Allows developers to enable / disable features based on flags.",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "wp-coding-standards/wpcs": "^2.3",
        "automattic/vipwpcs": "^2.2",
        "brain/monkey": "^2.6"
        },
    "autoload": {
        "psr-4": {
            "MR\\FeatureFlags\\": ["includes/", "helper/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MR\\FeatureFlags\\Tests\\": "tests/unit/"
        }
    },
	"config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
	},
    "scripts": {
        "lint:php": "phpcs .",
        "lint:php-fix": "phpcbf .",
        "test:php": "phpunit --dont-report-useless-tests --configuration ./phpunit.xml.dist"
    }
}

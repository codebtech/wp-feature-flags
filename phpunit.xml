  <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./includes</directory>
        </whitelist>
    </filter>
  <testsuites>
    <testsuite name="unit">
      <directory suffix=".php">./tests/unit/</directory>
    </testsuite>
  </testsuites>
</phpunit>

<?xml version="1.0"?>
<ruleset name="mr-feature-flags">
	<config name="minimum_supported_wp_version" value="6.0" />
	<config name="testVersion" value="8.0-"/>

		<!-- Exclude rulesets -->
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/build/*</exclude-pattern>

	<rule ref="WordPress-Docs">
		<severity>5</severity>
	</rule>
	<rule ref="WordPress-Extra">
		<severity>5</severity>
	</rule>
	<rule ref="WordPress-VIP-Go">
		<severity>5</severity>
	</rule>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="mr-feature-flags"/>
			</property>
		</properties>
	</rule>

	 <rule ref="Squiz.Strings.DoubleQuoteUsage.ContainsVar">
  		<severity>0</severity>
 	</rule>

	<!-- Temporarily disable some sniffs that conflict with PSR-4. -->
	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>includes/*</exclude-pattern>
		<exclude-pattern>helper/*</exclude-pattern>
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>
	<rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
		<exclude-pattern>includes/*</exclude-pattern>
		<exclude-pattern>helper/*</exclude-pattern>
		<exclude-pattern>tests/*</exclude-pattern>
	</rule>

	<!-- Remove particularly annoying and redundant WP sniffs -->
	<rule ref="WordPress.PHP.YodaConditions.NotYoda">
	    <exclude-pattern>includes/*</exclude-pattern>
	</rule>

	<!-- Check all PHP files in directory tree by default. -->
	<arg name="extensions" value="php"/>
	<file>.</file>

	<!-- Don't report the short array issue, as this is fine for VIP env -->
    <rule ref="Generic.Arrays.DisallowShortArraySyntax.Found">
        <severity>0</severity>
    </rule>

	<!-- Show sniff codes in all reports -->
	<arg value="sp"/>

	<arg name="colors"/>

	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/tests/unit/*</exclude-pattern>

</ruleset>
